<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/numerical_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numerical_fragment_title"
        android:layout_margin="20dp"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numerical_fragment_column_title_linear_layout"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/numerical_fragment_title"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/numerical_fragment_column_latitude_title"
            android:text="@string/numerical_fragment_latitude_title"
            android:textAlignment="center"
            android:background="@drawable/border_for_numerical_fragment_cell_title"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/numerical_fragment_column_longitude_title"
            android:text="@string/numerical_fragment_longitude_title"
            android:textAlignment="center"
            android:background="@drawable/border_for_numerical_fragment_cell_title"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/numerical_fragment_column_accuracy_title"
            android:text="@string/numerical_fragment_accuracy_title"
            android:textAlignment="center"
            android:background="@drawable/border_for_numerical_fragment_cell_title"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/numerical_fragment_column_altitude_title"
            android:text="@string/numerical_fragment_altitude_title"
            android:textAlignment="center"
            android:background="@drawable/border_for_numerical_fragment_cell_title"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/numerical_fragment_column_speed_title"
            android:text="@string/numerical_fragment_speed_title"
            android:textAlignment="center"
            android:background="@drawable/border_for_numerical_fragment_cell_title"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/numerical_fragment_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/numerical_fragment_column_title_linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>